QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #1e1e1e, stop:1 #3e3e3e);
}

QTextEdit {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border-radius: 10px;
    padding: 5px;
    font-size: 14px;
}

QPushButton {
    background-color: #0a84ff;
    color: white;
    border-radius: 10px;
    padding: 5px;
    font-weight: bold;
}

QComboBox {
    background-color: rgba(255,255,255,0.1);
    color: white;
    border-radius: 5px;
}

